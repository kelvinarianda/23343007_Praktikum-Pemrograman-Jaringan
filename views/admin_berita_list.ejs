<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Panel | MarketWave Terminal</title>
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    :root {
      --bg-dark: #0a0f1e;
      --card-bg: #161e31;
      --accent-gold: #fbbf24;
      --pure-white: #ffffff;
      --info-cyan: #22d3ee;
      --border-color: rgba(251, 191, 36, 0.2);
    }

    body {
      background-color: var(--bg-dark);
      color: var(--pure-white);
      font-family: 'Inter', sans-serif;
    }

    .premium-title {
      font-family: 'Playfair Display', serif;
      color: var(--accent-gold);
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    /* Card Styling */
    .card {
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    /* Table Styling */
    .table {
      color: var(--pure-white);
      border-color: var(--border-color);
      margin-bottom: 0;
    }

    .table thead th {
      background-color: rgba(0, 0, 0, 0.2);
      color: var(--accent-gold);
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 1px;
      border-bottom: 2px solid var(--border-color);
      padding: 15px;
    }

    .table tbody td {
      padding: 15px;
      border-bottom: 1px solid rgba(251, 191, 36, 0.1);
      background-color: transparent;
      color: var(--pure-white);
    }

    .table-striped tbody tr:nth-of-type(odd) td {
      background-color: rgba(255, 255, 255, 0.02);
    }

    /* Button Styling */
    .btn-gold {
      background-color: var(--accent-gold);
      color: #000;
      font-weight: 700;
      border: none;
    }

    .btn-gold:hover {
      background-color: #f59e0b;
      color: #000;
    }

    .btn-outline-gold {
      border: 1px solid var(--accent-gold);
      color: var(--accent-gold);
    }

    .btn-outline-gold:hover {
      background-color: var(--accent-gold);
      color: #000;
    }

    /* Badges */
    .badge-publish {
      background-color: rgba(34, 211, 238, 0.1);
      color: var(--info-cyan);
      border: 1px solid var(--info-cyan);
    }

    .badge-draft {
      background-color: rgba(255, 255, 255, 0.05);
      color: rgba(255, 255, 255, 0.5);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Misc */
    .text-gold-light { color: var(--accent-gold); opacity: 0.8; }
    .info-label { font-size: 0.75rem; color: rgba(255, 255, 255, 0.4); }
    .info-data { font-size: 0.75rem; color: var(--info-cyan); }
    
    .news-thumb {
      width: 80px; 
      height: 55px; 
      object-fit: cover; 
      border-radius: 6px;
      border: 1px solid var(--border-color);
    }

    hr { border-color: var(--border-color); opacity: 1; }
  </style>
</head>
<body class="pb-5">
  <div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h4 class="premium-title mb-0">Terminal Admin - Berita</h4>
        <div class="info-label">
          Operator: <span class="info-data fw-bold"><%= pengguna.nama %></span> 
          <span class="badge bg-warning text-dark ms-2" style="font-size: 0.6rem;"><%= pengguna.peran %></span>
        </div>
      </div>
      <div class="d-flex gap-2">
        <a href="/" class="btn btn-outline-gold btn-sm px-3">Home</a>
        <a href="/dashboard" class="btn btn-outline-gold btn-sm px-3">Dashboard</a>
        <form method="POST" action="/logout" class="m-0">
          <button class="btn btn-outline-danger btn-sm px-3">Logout</button>
        </form>
      </div>
    </div>

    <hr>

    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
      <div class="text-gold-light small fw-bold">DATABASE MANAGEMENT: NEWS ENGINE</div>
      <a href="/admin/berita/tambah" class="btn btn-gold btn-sm px-4 shadow-sm">+ TAMBAH BERITA</a>
    </div>

    <div class="card shadow-lg">
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th class="text-center">Media</th>
              <th>Headline & Metadata</th>
              <th class="text-center">Status</th>
              <th>System Log</th>
              <th class="text-center">Operations</th>
            </tr>
          </thead>
          <tbody>
            <% if (!list || list.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center py-5">
                  <div class="text-muted italic">No data records found in the system.</div>
                </td>
              </tr>
            <% } else { %>
              <% list.forEach(b => { %>
                <tr>
                  <td class="text-center">
                    <% if (b.gambar) { %>
                      <img src="<%= b.gambar %>" class="news-thumb">
                    <% } else { %>
                      <div class="info-label text-center">NO IMAGE</div>
                    <% } %>
                  </td>
                  <td>
                    <div class="fw-bold text-white mb-1" style="font-size: 0.95rem;"><%= b.judul %></div>
                    <div class="info-label">SLUG ID: <span class="info-data"><%= b.slug %></span></div>
                  </td>
                  <td class="text-center">
                    <% if (b.status === "publish") { %>
                      <span class="badge badge-publish px-3 py-2">LIVE</span>
                    <% } else { %>
                      <span class="badge badge-draft px-3 py-2">DRAFT</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="info-label">AUTHOR: <span class="info-data text-uppercase"><%= b.dibuat_oleh || "System" %></span></div>
                    <div class="info-label">DATE: <span class="info-data"><%= b.createdAt ? new Date(b.createdAt).toLocaleString("id-ID") : "-" %></span></div>
                  </td>
                  <td class="text-center">
                    <div class="d-flex justify-content-center gap-2 mb-2">
                      <a class="btn btn-outline-gold btn-sm py-1" href="/admin/berita/<%= b._id %>/edit" style="font-size: 0.7rem;">EDIT</a>
                      <form method="POST" action="/admin/berita/<%= b._id %>/hapus" onsubmit="return confirm('Yakin hapus data berita ini dari server?');" class="m-0">
                        <button class="btn btn-outline-danger btn-sm py-1" style="font-size: 0.7rem;">DELETE</button>
                      </form>
                    </div>
                    <a class="info-data text-decoration-none fw-bold" href="/berita/<%= b.slug %>" target="_blank" style="font-size: 0.7rem; border-bottom: 1px solid var(--info-cyan);">VIEW PUBLIC â†’</a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-4 text-center">
      <div class="info-label">MarketWave Admin Terminal v2.0 | Secured Node Connection</div>
    </div>

  </div>
</body>
</html>